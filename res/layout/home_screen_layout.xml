<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:background="#FFFFFF">
<TextView
    android:id="@+id/title_view"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.07" android:textColor="#e9e9e9" android:text="@string/app_name"
    android:textSize="60sp" android:gravity="center_horizontal"
    android:paddingTop="20dp"/>
<TextView
    android:id="@+id/what_view"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:textColor="#000000" android:text="@string/what" android:gravity="right"
    android:textSize="40sp" android:padding="20dp"/>
<EditText android:inputType="text"
          android:layout_width="330dp"
          android:layout_height="wrap_content"
          android:ems="10"
          android:id="@+id/whatText" android:background="#e9e9e9" android:layout_gravity="center_horizontal"
          android:textSize="40sp" android:padding="10dp"/>
<TextView
    android:id="@+id/where_view"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:textColor="#000000" android:text="@string/where" android:gravity="right"
    android:textSize="40sp" android:padding="20dp"/>
<EditText android:inputType="text" android:layout_width="330dp" android:layout_height="wrap_content"
          android:ems="10" android:id="@+id/whereText" android:background="#e9e9e9"
          android:layout_gravity="center_horizontal" android:textSize="40sp" android:padding="10dp"
    />
</LinearLayout>
