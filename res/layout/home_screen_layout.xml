<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
              android:weightSum="1" android:background="#FFFFFF">
    <TextView
        android:id="@+id/title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07" android:textColor="#e9e9e9" android:autoText="false" android:text="Balourdos"
        android:textSize="60dp" android:textAlignment="center" android:gravity="center_horizontal"
        android:paddingTop="20dp"/>
    <TextView
    android:id="@+id/what_view"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:textColor="#000000" android:text="WHAT" android:gravity="right"
    android:textSize="40dp" android:padding="20dp"/>
    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText" android:background="#e9e9e9" android:layout_gravity="center_horizontal"
        android:textSize="40dp" android:padding="10dp"/>
    <TextView
        android:id="@+id/where_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textColor="#000000" android:text="WHERE" android:gravity="right"
        android:textSize="40dp" android:padding="20dp"/>
    <EditText android:layout_width="330dp" android:layout_height="wrap_content" android:inputType="textPersonName"
              android:ems="10" android:id="@+id/editText2" android:background="#e9e9e9"
              android:layout_gravity="center_horizontal" android:textSize="40dp" android:padding="10dp"
        />
</LinearLayout>
